<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDetail</servlet-name>
        <servlet-class>Controller.UserDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NavBarController</servlet-name>
        <servlet-class>Controller.NavBarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>writeDiaryController</servlet-name>
        <servlet-class>Controller.writeDiaryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DiaryListController</servlet-name>
        <servlet-class>Controller.DiaryListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DraftController</servlet-name>
        <servlet-class>Controller.DraftController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>publicController</servlet-name>
        <servlet-class>Controller.publicController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDetail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NavBarController</servlet-name>
        <url-pattern>/navbar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>writeDiaryController</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DiaryListController</servlet-name>
        <url-pattern>/diarylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DraftController</servlet-name>
        <url-pattern>/draft</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>publicController</servlet-name>
        <url-pattern>/public</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
